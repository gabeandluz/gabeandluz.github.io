    %link{href:'http://fonts.googleapis.com/css?family=Open+Sans', rel:'stylesheet', type:'text/css'}
    :css
      html, body {
        font-family: 'Open Sans', sans-serif;
        margin: 0;
        padding: 0;
        height: 100%;
      }
      .slide {
        height: 100%;
        margin: 0;
        padding: 0;
        text-align: center;
        font-size: 0px;
      }
      .slide:before {
        content: '';
        display: inline-block;
        height: 100%;
        vertical-align: middle;
      }
      .content-box {
        font-size: 60px;
        display: inline-block;
        vertical-align: middle;
      }

